/* pages/intelligence/intelligence.wxss */
.intel-search-wrap{
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
}

.question-img{
  width: 35rpx;
  height: 35rpx;
}

.intel-search{
  height: 70rpx;
  width: 68%;
  background-color: #f2f2f2;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
}

.question{
  display: flex;
  color: #fff;
  font-size: 35rpx;
  width: 28%;
  height: 70rpx;
  background-color: #1ba5ff;
  border-radius: 5rpx;
  justify-content: center;
  align-items: center;
}

.search-logo{
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

.search-logo-wrap{
  flex: 1;
  margin-left: 35rpx;
  margin-top: 10rpx;
}

.search-text{
  flex: 8;
  color: #999;
  font-size: 32rpx;
}

.intel-swiper{
  width: 750rpx;
  height: 350rpx;
}

.intel-swiper-wrap{
  margin-top: 15rpx;
}

.slide-image{
  height: 350rpx;
  width: 100%;
}

.list-item {
  display: flex;
  font-size: 35rpx;
  flex: 1;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.intel-list{
  display: flex;
  height: 80rpx;
  margin-top: 15rpx;
  border-bottom: 10rpx solid #f2f2f2;
  justify-content: space-around;
  align-items: center;
}

.list-item-text{
  display: inline-block;
  height: 50rpx;
}

.intel-item-wrap{
  width: 100%;
  background-color: #f2f2f2;
}

.text-wrap{
  display: flex;
  align-items: center;
}

.recommend{
  font-size: 35rpx;
  display: inline-block;
  font-weight: bold;
  margin: 15rpx 0 0 30rpx;
  flex: 2;
}

.recommend .line{
  display: inline-block;
  width: 8rpx;
  height: 40rpx;
  background-color: #ff0000;
}

.more{
  display: inline-block;
  font-size: 30rpx;
  margin-right: 5rpx;
  color: #838383;
  flex: 8;
  text-align: right;
  margin: 15rpx 45rpx 0 0;
}

.recommend-item{
  padding-bottom: 40rpx;
  background-color: #fff;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 5rpx 25rpx -3rpx rgb(128, 126, 126);
}

.recommend-item .type-img{
  height: 60rpx;
  width: 60rpx;
}

.type-wrap{
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  align-self: flex-start;
}

.type{
  font-size: 30rpx;
  margin-left: 25rpx;
  font-weight: bold;
}

.item-main{
  width: 650rpx;
  height: 200rpx;
  border: 3rpx solid #e7e7e7;
  border-radius: 10rpx;
  padding: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.item-content{
  font-weight: bold;
  font-size: 36rpx;
}

.reply-tap{
  text-align: center;
  color: #1791ff;
  width: 140rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: bold;
  background-color: #ecf6ff;
  border-radius: 10rpx;
  padding: 0 10rpx;
}

.item-bottom{
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
}

.view-num{
  margin-left: -50rpx;
}

.reply-num{
  margin-left: -140rpx;
}

.reply-img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.view-num-wrap{
  display: flex;
  align-items: center;
  opacity: 0.6;
  margin-left: 60rpx;
}
.reply-num-wrap{
  display: flex;
  align-items: center;
  opacity: 0.6;
  margin-left: 40rpx;
}

.view-num-wrap image{
  padding-left: 8rpx;
  width: 25rpx;
  height: 25rpx;
}

.reply-num-wrap image{
  padding-left: 8rpx;
  width: 25rpx;
  height: 25rpx;
}